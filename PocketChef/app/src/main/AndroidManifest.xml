<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.owner1.pocketchef">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/pocketchef_icon_512x512"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.SEARCH" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data android:name="android.app.default_searchable"
                android:value="@xml/searchable" />
        </activity>

        <activity
            android:name=".FilterMenu"
            android:label="@string/title_activity_filter_menu"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity
            android:name=".RecipeDetails"
            android:label="@string/title_activity_recipe_details"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity
            android:name=".AddRecipeActivity"
            android:label="@string/title_activity_add_recipe"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity
            android:name=".EditActivity"
            android:label="@string/title_activity_edit_recipe"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RecipeDetails" />
        </activity>

        <activity
            android:name=".FridgeActivity"
            android:label="@string/title_activity_fridge"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity
            android:name=".FridgeDeleteActivity"
            android:label="@string/title_activity_fridge_delete"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".FridgeActivity" />
        </activity>

        <activity
            android:name=".FridgeAddActivity"
            android:label="@string/title_activity_fridge_add"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".FridgeActivity" />
        </activity>

        <activity
            android:name=".AddIngrActivity"
            android:label="@string/title_activity_ingr_add"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AddRecipeActivity" />
        </activity>

        <activity
            android:name=".AddIngrAddActivity"
            android:label="@string/title_activity_add_ingr_add"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AddIngrActivity" />
        </activity>

        <activity
            android:name=".AddIngrDeleteActivity"
            android:label="@string/title_activity_delete_ingr_add"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".AddIngrActivity" />
        </activity>

        <activity
            android:name=".EditIngrActivity"
            android:label="@string/title_activity_ingr_edit"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".EditActivity" />
        </activity>

        <activity
            android:name=".EditIngrAddActivity"
            android:label="@string/title_activity_add_ingr_edit"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".EditIngrActivity" />
        </activity>

        <activity
            android:name=".EditIngrDeleteActivity"
            android:label="@string/title_activity_delete_ingr_edit"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".EditIngrActivity" />
        </activity>
    </application>

</manifest>
